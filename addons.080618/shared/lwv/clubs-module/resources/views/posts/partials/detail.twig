<div class="post big">
    <div class="post-media">
        <img class="img-responsive" src="{{ post.post_image }}" />
    </div>

    <div class="post-entry">
        <div class="post-header">
            <h2 class="purple">{{ post.title }}</h2>
        </div>
        <div class="post-meta">Published {{ post.publish_at.format('F d, Y') }}</div>

        <p>{{ post.body|raw }}</p>
    </div>
</div>
