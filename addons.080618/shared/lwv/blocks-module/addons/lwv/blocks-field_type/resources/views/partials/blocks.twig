<table class="table" data-sortable="">
    <input type="hidden" value="{{ field_type.page.id }}" name="page">
    {% for block in field_type.blocks %}
        <tr>
            <input type="hidden" value="{{ block.type.table }}|{{ block.id }}" name="action_to[]">
            <td style="width: 30px;"><i class="fa fa-bars handle "></i><input type="hidden" value="1" name="order[]"></td>
            <td>{{ block.title }}</td>
            <td>{{ trans(block.type.title) }}</td>
            <td>
                <a class="btn btn-xs btn-warning" href="/admin/blocks/{{ block.type.slug }}/edit/{{ block.id }}">
                    <i class="fa fa-pencil"></i> Edit
                </a>
                <a class="btn btn-xs btn-info" href="/admin/blocks/copy/{{ block.type.slug }}/{{ block.id }}" data-target="#{{ field_type.field_name }}-modal" data-toggle="modal">
                    <i class="fa fa-clipboard"></i> Copy
                </a>
                <a href="/admin/blocks/{{ block.type.slug }}/delete/{{ block.id }}" data-message="&lt;h3&gt;Are you sure you want to delete this block?&lt;/h3&gt;&lt;p&gt;This can not be undone.&lt;/p&gt;" data-toggle="confirm" class="btn btn-xs btn-danger">
                    <i class="fa fa-trash "></i>
                    Delete
                </a>
            </td>
        </tr>
    {% endfor %}
</table>
<small class="text-muted">
    {{ trans('lwv.field_type.blocks::input.help') }}
</small>