{{ asset_add("scripts.js", "streams::js/table/jquery-sortable.js") }}
{{ asset_add("scripts.js", "lwv.module.blocks::js/weight_blocks.js") }}
{{ asset_add("scripts.js", 'lwv.field_type.blocks::js/input.js') }}

{% if field_type.message %}
    {{ view("lwv.field_type.blocks::partials/message", {'message': field_type.message}) }}
{% endif %}

{% if field_type.page %}
    <p>
        <a target="_blank" class="navbar-btn btn btn-info" href="/admin/pages/view/{{ field_type.page.id }}"><i class="fa fa-eye "></i> View Page</a>
        <a class="navbar-btn btn btn-info" href="/admin/blocks/choose/{{ field_type.page.id }}" data-toggle="modal" data-target="#modal"><i class="fa fa-plus"></i> Block</a>
    </p>
{% endif %}

{% if not field_type.blocks is empty %}
    {{ view("lwv.field_type.blocks::partials/blocks", {'field_type': field_type}) }}
{% endif %}

<div class="modal remote" id="{{ field_type.field_name }}-modal">
    <div class="modal-dialog">
        <div class="modal-content"></div>
    </div>
</div>
